{% extends '_design.njk' %}

{% block title %}App Design - {{ super() }}{% endblock %}

{% block introDesignHeading %}App Design{% endblock %}

{% block introDesignText %}Our mobile designs bring intuitive digital solutions to your customers right at their fingertips.{% endblock %}

{% block content %}
    {{ super() }}
    <div class="vertical__space design">
        {% for project in projects %}
            {% if project.type === "app" %}
                {% include "designData.njk" %}
            {% endif %}      
        {% endfor %}
        <article class="services__content">
            <a class="services__web services__card" href="./web-design">
                <h2 class="services__title">Web Design</h2>
                <p class="services__link">View Projects</p>
            </a>
            <a class="services__graphic services__card" href="./graphic-design">
                <h2 class="services__title">Graphic Design</h2>
                <p class="services__link">View Projects</p>
            </a>
        </article>
    </div>
{% endblock %}