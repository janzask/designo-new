{% extends '_design.njk' %}

{% block title %}Web design - {{ super() }}{% endblock %}

{% block introDesignHeading %}Web Design{% endblock %}

{% block introDesignText %}We build websites that serve as powerful marketing tools and bring memorable brand experiences.{% endblock %}

{% block content %}
    {{ super() }}
    <div class="vertical__space design">
        {% for project in projects %}
            {% if project.type === "web" %}
                {% include "designData.njk" %} 
            {% endif %}        
        {% endfor %}
        <article class="services__content">
            <a class="services__app services__card" href="./app-design">
                <h2 class="services__title">App Design</h2>
                <p class="services__link">View Projects</p>
            </a>
            <a class="services__graphic services__card" href="./graphic-design">
                <h2 class="services__title">Graphic Design</h2>
                <p class="services__link">View Projects</p>
            </a>
        </article>
    </div>
{% endblock %}