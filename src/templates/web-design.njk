{% extends '_design.njk' %}

{% block title %}Web design - {{ super() }}{% endblock %}

{% block introDesignHeading %}Web Design{% endblock %}

{% block introDesignText %}We build websites that serve as powerful marketing tools and bring memorable brand experiences.{% endblock %}

{% block content %}
    {{ super() }}
    <div class="horizontal__spacer design">
        {% for project in projects %}
            {% if project.type === "web" %}
                {% include "designData.njk" %} 
            {% endif %}        
        {% endfor %}
        <article class="services services--smaller">
            <div class="services__card services__card--app">
                <h2 class="services__title">App Design</h2>
                <a class="services__link" href="./app-design">View Projects</a>
            </div>
            <div class="services__card services__card--graphic">
                <h2 class="services__title">Graphic Design</h2>
                <a class="services__link" href="./graphic-design">View Projects</a>
            </div>
        </article>
    </div>
{% endblock %}