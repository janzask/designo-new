<section id="{{ project.connect }}" class="location">
  <img class="location__image" src="{{ project.image }}" alt="">
  <div class="location__content">
    <div>
      <h2 class="location__title">{{ project.title }}</h2>
    </div>
    <div>
      <h3 class="location__title location__title--service">{{ project.office }}</h3>
      <p class="location__description">{{ project.street }}</p>
      <p class="location__description">{{ project.city }}</p>
    </div>
    <div>
      <h3 class="location__title location__title--service">{{ project.contact }}</h3>
      <p class="location__description">{{ project.phone }}</p>
      <p class="location__description">{{ project.email }}</p>
    </div>
  </div>
</section>