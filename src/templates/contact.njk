{% extends '_base.njk' %}

{% block title %}Contact - {{ super() }}{% endblock %}

{% block intro %}{% endblock %}

{% block content %}

    <section class="contact">
      <div class="intro-contact">
        <h2 class="intro-contact-heading">Contact Us</h2>
        <p class="intro-contact-descriptions">
          Ready to take it to the next level? Let’s talk about your project or idea and find out how we can help your business
          grow. If you are looking for unique digital experiences that’s relatable to your users, drop us a line.
        </p>
      </div>
    <form class="intro-contact-form">
        <input class="input" type="text" placeholder="Name" required/>
        <input class="input" type="email" id="email" placeholder="Email Address" required/>
        <input class="input" type="tel" id="phone" placeholder="Phone" required/>
        <input class="input" type="text" placeholder="Your Message" required/>
        <div class="intro-contact-button">
          <input class="button button-contact" type="submit" value="Submit" />
        </div>
    </form>
    </section>

    <section class="properties">
      <div class="properties-city-section">
        <img src="/img/illustration/canada-oval.svg" alt="">
          <h3 class="properties-heading properties-city-heading">Canada</h3>
        <a class="button button-about" href="locations.html#canada_locations">See location</a>
      </div>
      <div class="properties-city-section">
        <img src="/img/illustration/australia-oval.svg" alt="">
          <h3 class="properties-heading properties-city-heading">Australia</h3>
        <a class="button button-about" href="locations.html#australia_locations">See location</a>
      </div>
      <div class="properties-city-section">
        <img src="/img/illustration/united-kingdom-oval.svg" alt="">
          <h3 class="properties-heading properties-city-heading">United Kingdom</h3>
        <a class="button button-about" href="locations.html#united_kingdom_locations">See location</a>
      </div>
    </section>

{% endblock %}
{% block calltoaction %}{% endblock %}