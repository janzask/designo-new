{% extends '_design.njk' %}

{% block title %}Graphic design - {{ super() }}{% endblock %}

{% block introDesignHeading %}Graphic Design{% endblock %}

{% block introDesignText %}We deliver eye-catching branding materials that are tailored to meet your business objectives.{% endblock %}

{% block content %}
    {{ super() }}
    <div class="vertical__space design">
        {% for project in projects %}
            {% if project.type === "graphic" %}
                {% include "designData.njk" %}
            {% endif %}    
        {% endfor %}
        <article class="services__content">
            <a class="services__app services__card" href="./app-design">
                <h2 class="services__title">App Design</h2>
                <p class="services__link">View Projects</p>
            </a>
            <a class="services__web services__card" href="./web-design">
                <h2 class="services__title">Web Design</h2>
                <p class="services__link">View Projects</p>
            </a>
        </article>
    </div>
{% endblock %}